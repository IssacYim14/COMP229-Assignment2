<!DOCTYPE html>
<html>
  <head>
    <title>Update Contact</title>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>
  <body>
    <div id="allPage">
      <% include('partials/header.ejs') %>
      <h1>Update Contact</h1>
      <form action="/businessContacts/<%= contact._id %>/update" method="POST">
        <div>
          <label for="name">Contact Name</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div>
          <label for="number">Contact Number</label>
          <input
            type="text"
            id="number"
            name="number"
            value="<%= contact.number %>"
            required
          />
        </div>
        <div>
          <label for="email">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <button type="submit">Update Contact</button>
        <a href="/businessContacts" class="cancel-btn">Cancel</a>
      </form>
      <form action="/businessContacts/<%= contact._id %>/delete" method="POST">
        <button type="submit">Delete Contact</button>
      </form>
      <% include('partials/footer.ejs') %>
    </div>
  </body>
</html>
